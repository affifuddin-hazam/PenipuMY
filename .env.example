# ============================================================
# PenipuMY Bot - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# === Telegram Bot (Required) ===
# Get from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# === Admin Access ===
# Comma-separated Telegram user IDs with admin access
ADMIN_USER_IDS=123456789

# === Channel Membership (Optional) ===
# Require users to join a channel before using the bot
REQUIRED_CHANNEL_ID=@YourChannel
REQUIRED_CHANNEL_URL=https://t.me/YourChannel

# === Demo API Flags ===
# Control what the dummy API modules return.
# SemakMule: number of police reports returned (0 = clean, 1+ = flagged)
DEMO_SEMAKMULE_POLICE_REPORTS=0
# Truecaller: 'true' = name found, 'false' = no record
DEMO_TRUECALLER_FOUND=true
# Social Tracker: 'true' = profile resolved, 'false' = not found
DEMO_SOCIAL_TRACKER_FOUND=true

# === Rate Limiting ===
# Toggle rate limiting on/off
RATE_LIMIT_ENABLED=true
# Max lookups per window per user
RATE_LIMIT_MAX=2
# Window duration in hours
RATE_LIMIT_WINDOW_HOURS=5
